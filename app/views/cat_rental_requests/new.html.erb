
<form action="http://localhost:3000/cat_rental_request" method="post">
  <label for="cat_id">Choose Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
  <% @cats.each do |cat| %>
    <option value = <%=cat.id%>><%=cat.name%></option>
  <% end %>
  </select>
  <label for="cat_rental_begin_date">Rental Begin Date</label>
  <input type="date" name="cat_rental_request[begin_date]" id="cat_rental_begin_date">
  <label for="cat_rental_end_date">Rental End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_end_date">

  <input type="hidden" name="cat_rental_request[status]" value="undecided", id="undecided">

  <input type="submit" value="Request a Cat Rental">
</form>
